<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/atualiza_empresa_card"
             tools:context=".apresentacao.fragmentos.DetalhesEmpresaFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_child_empresa_detalhes_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Empresa" android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/verdeTexto" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:text="email" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:text="Telefone" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp" android:text="CNPJ"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                android:text="EndereÃ§o" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:foreground="@drawable/circle" android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <Button
                android:id="@+id/btn_atualizar_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Atualizar" app:backgroundTint="@color/verde_claro"
                app:cornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_excluir_empresa"
                app:layout_constraintEnd_toStartOf="@+id/btn_excluir_empresa"
                app:layout_constraintTop_toTopOf="@+id/btn_excluir_empresa"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:id="@+id/btn_excluir_empresa"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" android:layout_marginEnd="16dp"
                android:text="Excluir" app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>